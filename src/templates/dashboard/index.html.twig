{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted("ROLE_RECENZENT") %}
        <h1>recenzentský portál</h1>
        <h3>Přehled posudků</h3>
        <table class="table table-bordered">
            <tr>
                <th>název</th>
                <th>datum</th>
                <th>stav</th>
                <th>akce</th>
            </tr>
            {% for review in app.user.reviews %}
            <tr class="{% if review.status == "rejected" %}bg-danger{% endif %}{% if review.status == "accepted" %} bg-success{% endif %}">
                <td>{{ review.article.title }}</td>
                <td>{{ review.created|date }}</td>
                <td>{{ review.status }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">

                    <a  href="{{ path('review_show', {'id': review.id}) }}" class="btn-default btn btn-x" title="zobrazit"><i class="fa fa-search"></i> </a>
                    {% if review.status == "created" %}
                        <a href="{{ path('review_accept', {'id': review.id}) }}" class="btn-success btn btn-x" title="přijmout"><i class="fa fa-check"></i> </a>
                        <a href="{{ path('review_reject', {'id': review.id}) }}" class="btn-danger btn btn-x" title="odmítnout"><i class="fa fa-times"></i> </a>
                    {% endif %}
                    </div>
                </td>
            </tr>
            {% endfor %}
        </table>
    {% else %}
    <h1>nadpis</h1>
    <ul>
        <li>Můžete přidat <a href="{{ path('article_new') }}">nový článek</a></li>
    </ul>
    {% endif %}
</div>
{% endblock %}
